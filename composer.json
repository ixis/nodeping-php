{
    "name": "ixis/nodeping-php",
    "description": "PHP library for interacting with the NodePing API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Stevenson woods",
            "email": "joshua.stevenson-woods@ixis.co.uk"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^6.0",
        "symfony/serializer": "^3.2",
        "symfony/property-info": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.7"
    },
    "autoload": {
        "psr-4": {
